def avg_of_nums():
    total = 0
    count = 0
     
     while True:
         num = input("Enter a number (or 'stop' to finish): ")
         
         if num == 'stop':
             break
         
         try:
             num = float(num)
        except ValueError:  
            print("Invalid: inout, please enter a valid number")
            continue
        
        total += num
        count += 1
        
    if count == 0:
        print("No numbers entered")
    else:
        print("The average of the numbers is: {total 
        / count}")
    avg_of_nums()
        
